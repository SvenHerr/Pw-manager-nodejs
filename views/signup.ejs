<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partial/head') %>
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3"><%= t("signup.title") %></h3>
                            <form action="/signup" method="POST">
                                <div class="form-group">
                                    <label><%= t("signup.username") %> *</label>
                                    <input type="text" id="username" name="username" class="form-control p_input" required>
                                </div>
                                <div class="form-group">
                                    <label><%= t("signup.firstname") %> *</label>
                                    <input type="text" id="firstname" name="firstname" class="form-control p_input" required>
                                </div>
                                <div class="form-group">
                                    <label><%= t("signup.lastname") %> *</label>
                                    <input type="text" id="lastname" name="lastname" class="form-control p_input" required>
                                </div>
                                <div class="form-group">
                                    <label><%= t("signup.password") %> *</label>
                                    <input type="password" id="pw" name="pw" class="form-control p_input" required>
                                </div>
                                <div class="form-group">
                                    <label><%= t("signup.passwordRepeat") %> *</label>
                                    <input type="password" id="pw1" name="pw1" class="form-control p_input" required>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                    </div>

                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn"><%= t("signup.register") %></button>
                                </div>
                            </form>
                            <form action="/" method="get">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-secondary btn-block enter-btn"><%= t("signup.login") %></button>
                                </div>
                            </form>
                            
                            <div class="message"></div>

                            <% if(errormsg.length > 0){ %>

                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <strong><%= t(errormsg) %></strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>

                            <% } %>                          
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="../../assets/vendors/admin.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../assets/vendors/jquery/jquery-3.6.1.min.js"></script>

    <!-- endinject -->
</body>

</html>
