<% naviActive="index" %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <%- include('partial/head') %>
    </head>

    <body>

        <div class="container-scroller">
            <!-- partial:../../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <%- include('partial/nav') %>
            </nav>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">

                <nav class="navbar p-0 fixed-top d-flex flex-row">
                    <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                        <p>PW Tresor Sven</p>
                    </div>
                    <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                        <button class="navbar-toggler navbar-toggler align-self-center" type="button"
                            data-toggle="minimize">

                        </button>

                        <ul class="navbar-nav navbar-nav-right">
                            <li class="nav-item dropdown d-none d-lg-block">

                                <form action="/customer/logout" method="POST">

                                    <input type="text" name="newtask" placeholder="add new task" hidden>
                                    <button id="logoutButton"
                                        class="nav-link btn btn-danger create-new-button d-inline-block">Logout</button>

                                </form>

                            </li>
                        </ul>
                        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                            data-toggle="offcanvas">
                            <span class="mdi mdi-format-line-spacing"></span>
                        </button>
                    </div>
                </nav>
                <!-- partial -->
                <div class="main-panel">

                    <div class="content-wrapper">
                        <div class="page-header">
                            <h3 class="page-title">Passwörter</h3>
                            <h5 style="color: #0af53a" id="numCount"></h5>
                            <div class="message"></div>
                        </div>

                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Add new pw</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <form action="/administration/addnewpw" method="post">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>App/Webseite-Name</label>
                                                        <input type="text" id="applicationname" name="applicationname"
                                                            class="form-control p_input" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Loginname</label>
                                                        <input type="text" id="loginname" name="loginname"
                                                            class="form-control p_input" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                        <input type="password" id="pw" name="pw"
                                                            class="form-control p_input" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Kunde</label>
                                                        <select id="customers" name="customerId">
                                                            <option value="0">Allgemein</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal PW -->
                                <div class="modal fade" id="changePwModalCenter" tabindex="-1" role="dialog"
                                    aria-labelledby="changePwModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="changePwModalLongTitle">Change pw</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <form action="/customer/changepw" method="POST">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>Old pw</label>
                                                        <input type="password" id="oldPw" name="oldPw"
                                                            class="form-control p_input" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>New pw</label>
                                                        <input type="password" id="newPw" name="newPw"
                                                            class="form-control p_input" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>New pw</label>
                                                        <input type="password" id="newPw1" name="newPw1"
                                                            class="form-control p_input" required>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal Change PW -->
                                <div class="modal fade" id="changeAppPwModalCenter" tabindex="-1" role="dialog"
                                    aria-labelledby="changeAppPwModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="changeAppPwModalLongTitle">Change pw for
                                                    App/Website</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <form action="/administration/changepw" method="POST">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>New pw</label>
                                                        <input type="password" id="newPw" name="newPw"
                                                            class="form-control p_input" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>New pw</label>
                                                        <input type="password" id="newPw1" name="newPw1"
                                                            class="form-control p_input" required>
                                                    </div>
                                                    <input type="text" id="changeelement" name="changeelement"
                                                        class="form-control p_input" hidden>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal PW delete -->
                                <div class="modal fade" id="deletePwModalCenter" tabindex="-1" role="dialog"
                                    aria-labelledby="deletePwModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deletePwModalLongTitle">Change pw</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <form action="/administration/deletepw" method="POST">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>Pw wirklich unwiederruflich löschen? (Type "yes")</label>
                                                        <input type="password" id="confirmation" name="confirmation"
                                                            class="form-control p_input" required>
                                                        <input type="password" id="elementId" name="elementId"
                                                            class="form-control p_input" hidden>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">DELETE</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">Deine Passwörter</h4>
                                    <a class="nav-link btn btn-success create-new-button d-inline-block"
                                        id="openCreateNewPassword" data-toggle="modal" data-target="#exampleModalCenter"
                                        aria-expanded="false" href="#">+ Neues Passwort anlegen</a>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th> User </th>
                                                    <th> App/Webseite- Name </th>
                                                    <th> Unchanged </th>
                                                    <th> Loginname </th>
                                                    <th> PW </th>
                                                    <th> Show </th>
                                                    <th> Copy Pw </th>
                                                    <th> Change</th>
                                                    <th> Created </th>
                                                    <th> Delete </th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% var customerChanged=false; var currentCustomerId=0; %>
                                                    <% for(var i=0; i < pwDatas.length; i++){ %>

                                                        <% if(pwDatas[i].CustomerId !=0 && customerChanged){ %>
                                                            <tr>
                                                                <td class="py-1">

                                                                    Kunde: <%= pwDatas[i].Name %>

                                                                </td>
                                                            </tr>
                                                            <% } %>

                                                                <tr>
                                                                    <td class="py-1">

                                                                        <% iconname=userData.username+".jpg"; %>
                                                                            <img src="../../assets/images/faces/<%= iconname %> "
                                                                                alt="image" />

                                                                    </td>
                                                                    <td>
                                                                        <%= pwDatas[i].Name %>
                                                                    </td>
                                                                    <td>
                                                                        <%= moment().diff(moment(pwDatas[i].CreateDate), 'days') %>
                                                                    </td>
                                                                    <td>
                                                                        <%= pwDatas[i].Loginname %>
                                                                    </td>
                                                                    <td>
                                                                        <p style=" margin:0px;"
                                                                            id="tempPw<%= pwDatas[i].Id %>">*****</p>
                                                                    </td>

                                                                    <td>
                                                                        <form class="showPwFormId">

                                                                            <input type="text" name="id"
                                                                                value="<%= pwDatas[i].Id %>" hidden>
                                                                            <button
                                                                                class="nav-link btn btn-success create-new-button d-inline-block hidebutton"
                                                                                style="display: none !important;"
                                                                                id="HideButton<%= pwDatas[i].Id %>">Hide</button>
                                                                            <button
                                                                                class="nav-link btn btn-warning create-new-button d-inline-block"
                                                                                id="ShowButton<%= pwDatas[i].Id %>">Show</button>

                                                                        </form>
                                                                    </td>
                                                                    <td>
                                                                        <form class="copyFormId">
                                                                            <input type="text" name="id" id="id"
                                                                                value="<%= pwDatas[i].Id %>" hidden>
                                                                            <button
                                                                                class="nav-link btn btn-success create-new-button d-inline-block">Copy</button>
                                                                        </form>
                                                                    </td>
                                                                    <td>
                                                                        <a class="nav-link btn btn-warning create-new-button d-inline-block changeapppw"
                                                                            id="openChangeAppPassword"
                                                                            data-changeelement="<%= pwDatas[i].Id %>"
                                                                            data-toggle="modal"
                                                                            data-target="#changeAppPwModalCenter"
                                                                            aria-expanded="false" href="#">Change Pw</a>
                                                                    </td>
                                                                    <td>
                                                                        <%= moment().format('MM/DD/YYYY') %>
                                                                    </td>
                                                                    <td>
                                                                        <a class="nav-link btn btn-danger create-new-button d-inline-block delete"
                                                                            id="openDeletePassword"
                                                                            data-element-id="<%= pwDatas[i].Id %>"
                                                                            data-toggle="modal"
                                                                            data-target="#deletePwModalCenter"
                                                                            aria-expanded="false" href="#">Delete</a>

                                                                    </td>
                                                                </tr>

                                                                <% currentCustomerId=pwDatas[i].CustomerId;
                                                                    if(currentCustomerId !=pwDatas[i].CustomerId){
                                                                    customerChanged=true; } %>
                                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="errorMessage"><%= errormsg %></div>

                    <%- include('partial/footer') %>

                        <!-- partial -->
                </div>
                <!-- main-panel ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>

        <!-- container-scroller -->
        <!-- plugins:js -->
        <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script src="../../assets/vendors/chart.js/Chart.min.js"></script>
        <script src="../../assets/vendors/admin.js"></script>
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <!-- End custom js for this page -->
    </body>

    </html>
